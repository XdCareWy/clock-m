<!--pages/enter/gradeEnter.wxml-->
<view>
  <form bindsubmit='formSubmit'>
    <view class='section'>
      <text class='label'>姓名：</text>
      <input class="defalut-width" name='name' value='{{student.name}}' placeholder='请输入姓名' />
    </view>
    <view class='section'>
      <text class='label'>项目：</text>
      <picker class="defalut-width" name="project" mode="selector" range-key="label" bindchange="bindProjectChange" value="{{projectId}}" range="{{projectData}}">
        <view class="picker">
          {{projectData[projectId].label}}
        </view>
      </picker>
    </view>
    <view class='section'>
      <text class='label'>课程：</text>
      <picker class="defalut-width" name="classes" mode="selector" range-key="label" bindchange="bindClassChange" value="{{classId}}" range="{{classData}}">
        <view class="picker">
          {{classData[classId].label}}
        </view>
      </picker>
    </view>
    <view class='section'>
      <text class='label'>老师：</text>
      <picker class="defalut-width" name="teacher" mode="selector" range-key="label" bindchange="bindTeacherChange" value="{{teacherId}}" range="{{teacherData}}">
        <view class="picker">
          {{teacherData[teacherId].label}}
        </view>
      </picker>
    </view>

    <view class='btn-section'>
      <button formType='submit' type='primary' class='btn-common' disabled='{{disabled}}'>打卡</button>
    </view>
  </form>
  <my-component visible="{{visible}}" bindok="modalOk" bindcancel="modalCancel">
  </my-component>
</view>